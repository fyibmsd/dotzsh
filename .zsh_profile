# functions
#
# change php version
function chp () {
    cur=$(ll `which php` | awk -F '/' '{print $7}')
    brew unlink $cur
    brew link $1
}

function github() {
	n=$(echo $1 | awk -F ':' '{print $2}')
	d=~/code/org/github/$n[0,-5]
	/bin/mkdir -p $d
	/usr/local/bin/git clone --depth=1 $1 $d
	cd $d
}


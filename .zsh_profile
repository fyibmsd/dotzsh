# docker
function drm() {
    docker ps -a | grep 'Exited' | awk '{print $1}' | xargs docker rm
}
function drmi() {
    docker images | grep '<none>' | awk '{print $3}' | xargs docker rmi
}

function dip() {
	docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' $1
}


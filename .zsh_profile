# homestead
function serve-laravel() {
    if [[ "$1" && "$2" ]]
    then
		sudo bash /home/work/code/scripts/nginx-conf/serve-laravel.sh "$1" "$2" 80
    else
        echo "Error: missing required parameters."
        echo "Usage: "
        echo "  serve domain path"
    fi
}

